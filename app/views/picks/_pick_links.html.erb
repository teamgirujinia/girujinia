<% if project.user != current_user %>
    <% if project.picked_by? current_user %>
        <%= link_to project_picks_path(project.id), method: :delete, class: "picks_ajax_#{project.id}", remote: true do %>
            <i class="bookmark yellow icon"></i>
        <% end %>
    <% else %>
        <%= link_to project_picks_path(project.id), method: :post, class: "picks_ajax_#{project.id}", remote: true do %>
            <i class="bookmark icon"></i>
        <% end %>
    <% end %>
<% end %>