

<div class="ui grid">
    <div class="eight wide column">
  
      <%= form_for(@project,  html: {class: 'ui form'}) do |f| %>
        <% if @project.errors.any? %>
        <div id="error_explanation">
          <div class="ui red message">
            <h2><%= pluralize(@project.errors.count, "error") %> 保存されませんでした:</h2>
            <ul>
            <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
        <% end %>
        
        <!-- current_user.idを入れる -->
        <%= f.hidden_field :user_id, value: current_user.id %>
        
      <p>
        <%= f.label :作りたいもの %>
        <%= f.text_field :create_title, placeholder: :"例：YouTubeの曲をアーティストごとに設定できるアドオン" %>
      </p>
      
      <div class="ui form">
        <div class="three fields">
          <div class="field">
            <%= f.label :期間 %>
            <%= f.select :period, options_for_select(["", "~1ヶ月", "1~3ヶ月", "3ヶ月~"]), {}, { class: 'ui fluid dropdown' } %>
          </div>
          <div class="field">
            <%= f.label :募集人数 %>
            <%= f.number_field :capacity %>
          </div>
          <div class="field">
            <%= f.label :作業方法 %>
            <%= f.select :work_method, options_for_select(["", "オフライン", "オンライン"]), {}, { class: 'ui fluid dropdown' } %>
          </div>
        </div>
      </div>
      
      <div class="ui form">
        <div class="three fields">
          <div class="field">
            <%= f.label :開発物のタイプ %>
            <%= f.select :dev_type, options_for_select(["", "Webアプリ", "モバイルアプリ", "デスクトップアプリ"]), {}, { class: 'ui fluid dropdown' } %>
          </div>
          <div class="field">
            <%= f.label :ツール %>
            <%= f.select :tool, options_for_select(["", "GitHub", "BitBucket"]), {}, { class: 'ui fluid dropdown' } %>
          </div>
          <div class="field">
            <%= f.label :連絡方法 %>
            <%= f.select :communication, options_for_select(["", "チャットワーク", "Slack", "LINE", "Skype", "その他"]), {}, { class: 'ui fluid dropdown' } %>
          </div>
          </div>
        </div>

      <div class="ui form">
        <div class="three fields">
          <div class="field">
            <%= f.label :募集職種1 %>
            <%= f.select :job_first, options_from_collection_for_select(Tag.all, :name, :name), {}, { class: 'ui fluid dropdown' }   %>
          </div>
          <div class="field">
            <%= f.label :募集職種2 %>
            <%= f.select :job_secound, options_from_collection_for_select(Tag.all, :name, :name), {}, { class: 'ui fluid dropdown' }   %>
          </div>
          <div class="field">
            <%= f.label :募集職種3 %>
            <%= f.select :job_third, options_from_collection_for_select(Tag.all, :name, :name), {}, { class: 'ui fluid dropdown' }   %>
          </div>
        </div>
      </div>
      
      <div class="ui form">
        <div class="three fields">
          <div class="field">
            <%= f.label :言語1 %>
            <%= f.select :lang1, options_for_select(["", "PG", "PD", "WEデザイナー", "SE", "その他"]), {}, { class: 'ui fluid dropdown' }  %>
          </div>
          <div class="field">
            <%= f.label :言語2 %>
            <%= f.select :lang2, options_for_select(["", "PG", "PD", "WEデザイナー", "SE", "その他"]), {}, { class: 'ui fluid dropdown' }  %>
          </div>
          <div class="field">
            <%= f.label :言語3 %>
            <%= f.select :lang3, options_for_select(["", "PG", "PD", "WEデザイナー", "SE", "その他"]), {}, { class: 'ui fluid dropdown' }  %>
          </div>
        </div>
      </div>

     </div>


    <div class="eight wide column ui form">
      <p>
        <%= f.label :内容 %>
        <%= f.text_area :content, placeholder: :"概要・理由・どうやって作るのか・参考文献など", style: :"height: 1000px;"%>
      </p>
      <p>
        <%= f.submit "投稿", class: :"fluid ui submit green button" %>
      </p>
    <% end %>

    </div>

</div>