<!--いいねボタンの表示-->
<% if project.user != current_user %>
    <% if project.liked_by? current_user %>
        <%= link_to project_likes_path(project.id), method: :delete, class: "likes_ajax_#{project.id}", remote: true do %>
            <i class="like pink icon"></i>
        <% end %>
    <% else %>
        <%= link_to project_likes_path(project.id), method: :post, class: "likes_ajax_#{project.id}", remote: true do %>
            <i class="like icon"></i>
        <% end %>
    <% end %>
<% end %>