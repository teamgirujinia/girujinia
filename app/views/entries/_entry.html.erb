<!-- ========================= 応募機能  ======================== -->
<!-- プロジェクトを作成したユーザーには応募ボタンは表示されない -->

      <%= button_to '応募を取り消す', project_entry_path(@project), method: :delete, class: :"fluid ui brown button" %>

    <%= form_for [@project, @project.entries.build] do |f| %>
        <!-- user_idを入れる -->
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <!-- project_idを入れる -->
        <%= f.hidden_field :projec_id, :value => @project.id %>
        <!-- owner_idを入れる -->
        <%= f.hidden_field :owner_id, :value => @project.user.id %>
        <p>
          <%= f.submit '応募' %>
        </p>
  
  <% end %>
<% end %>
